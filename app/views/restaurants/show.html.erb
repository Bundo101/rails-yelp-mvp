<h1><%= @restaurant.name %></h1>

<p>
  <%= @restaurant.address %>
  <%= @restaurant.phone_number %>
  <br>
  <%= @restaurant.category.capitalize %>
</p>

<br>
<%= link_to "Add new review",  new_restaurant_review_path(@restaurant), class:"btn btn-primary" %>
<br>
<br>

<h4>Reviews for <%= @restaurant.name %></h4>

<% @restaurant.reviews.each do |review| %>
  <p>
    <%= review.content %>
    <br>
    <%= review.rating %>
  </p>
<% end %>
